        <!-- Color palettes -->
        <item name="colorPrimary">@color/mathack_primary</item>
        <item name="colorPrimaryDark">@color/mathack_primaryDark</item>
        <item name="colorOnPrimary">@color/mathack_onPrimary</item>
        <item name="colorPrimaryContainer">@color/mathack_primaryContainer</item>
